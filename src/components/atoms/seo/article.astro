---
import type { SEOProps } from "./shared";

type Props = Pick<SEOProps, "editedTime" | "publishedTime" | "keywords">;
const { keywords, editedTime, publishedTime } = Astro.props as Props;
---

<>
  {
    keywords?.length
      ? keywords.map((keyword) => (
          <meta property="article:tag" content={keyword} />
        ))
      : null
  }
</>
<meta property="article:section" content="Technology" />
<meta property="article:author" content={"Dicky Saputra"} />
<>
  {editedTime && <meta property="article:modified_time" content={editedTime} />}
</>
<>
  {
    publishedTime && (
      <meta property="article:published_time" content={publishedTime} />
    )
  }
</>
